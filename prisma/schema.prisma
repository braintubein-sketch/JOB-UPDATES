generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id               String   @id @default(cuid())
  slug             String   @unique
  title            String
  organization     String
  postName         String
  vacancies        String?
  qualification    String
  ageLimit         String?
  salary           String?
  importantDates   String?  // Store as JSON string
  selectionProcess String?  @db.Text
  applicationFee   String?
  notificationLink String?
  applyLink        String?
  faq              String?  // Store as JSON string
  category         String   // Govt, Private, Result, Admit Card
  subCategory      String?  // State-wise, Freshers, etc.
  state            String?
  source           String   // Official URL
  status           String   @default("PENDING") // PENDING, APPROVED, EXPIRED
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  expiresAt        DateTime?
  isFeatured       Boolean  @default(false)
}

model Setting {
  key   String @id
  value String
}
